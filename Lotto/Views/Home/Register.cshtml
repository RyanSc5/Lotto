@model Lotto.Dtos.RegisterDto

@{
    ViewData["Title"] = "加入會員";
}

<h1 >加入會員</h1>

<style>
    .card {
        border-radius: 10px;
        padding: 20px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
    }

    h1, h3 {
        color: #333;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    input[type="submit"] {
        background: linear-gradient(to right, #4caf50, #81c784);
        border: none;
        border-radius: 25px;
        padding: 12px;
        transition: background 0.3s ease;
        font-size: 18px;
    }

    input[type="submit"]:hover {
        background: linear-gradient(to right, #388e3c, #4caf50);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
    }

    .text-danger {
        font-size: 14px;
    }
</style>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title text-center">註冊帳號</h3>
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="Login" class="control-label"></label>
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password2" class="control-label"></label>
                        <input asp-for="Password2" class="form-control" type="password" />
                        <span asp-validation-for="Password2" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password_hint" class="control-label"></label>
                        <input asp-for="Password_hint" class="form-control" />
                        <span asp-validation-for="Password_hint" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PlayerName" class="control-label"></label>
                        <input asp-for="PlayerName" class="form-control" />
                        <span asp-validation-for="PlayerName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="註冊" class="btn btn-primary btn-lg btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
