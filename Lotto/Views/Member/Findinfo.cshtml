@model PlayerinfoViewModel

@{
    ViewData["Title"] = "個人資料";
}
<br />
<br />
<br />


<style>
    /* 自訂表格樣式 */
    .table {
        width: 100%;
        margin-top: 20px;
        font-size: 1rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5; /* 滑鼠懸停行顏色 */
    }

    .thead-dark {
        background-color: #343a40;
        color: #ffffff;
    }

    .table-bordered th, .table-bordered td {
        border: 1px solid #dee2e6; /* 邊框顏色 */
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075); /* 輕微陰影 */
    }

    /* 表格內文字對齊 */
    .table th, .table td {
        text-align: center; /* 置中 */
        vertical-align: middle;
    }
</style>

<div class="container">
    <div class="card shadow-lg border-0 rounded-4 mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="m-0">玩家資訊</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Findinfo.PlayerName)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.Findinfo.PlayerName)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Findinfo.Wallet)
                </div>
                <div class="col-md-9 text-success">
                    $@Html.DisplayFor(model => model.Findinfo.Wallet)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Findinfo.Level)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.Findinfo.Level)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Findinfo.Login)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.Findinfo.Login)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Findinfo.Email)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.Findinfo.Email)
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Findinfo.Create_Day)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.Findinfo.Create_Day)
                </div>
            </div>
        </div>
        <br />

        <div>
            @if (Model.Winningresult.Any())
            {
                <table class="table table-striped table-hover table-bordered shadow-sm">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Winningresult[0].Ismatch)</th>
                            <th>@Html.DisplayNameFor(model => model.Winningresult[0].Count)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.Winningresult)
                        {
                            <tr>
                                <td>@result.Ismatch</td>
                                <td>@result.Count</td>                                
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">沒有中獎記錄。</p>
            }
        </div>

        <div class="card-footer text-center">
            <br />
            <a href="/Member/Updateinfo" class="btn btn-outline-primary mx-2">編輯資料</a>
            <a href="/Member/Findtran" class="btn btn-outline-secondary mx-2">查看交易紀錄</a>
            <a href="/Member/Logout" class="btn btn-outline-danger mx-2">登出</a>
        </div>
    </div>
</div>
